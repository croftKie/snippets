<div class="container-fluid pb-5 mb-5 px-5">
  <div class="row mb-4">
    <div class="col">
      <h1>Hey, <%= userName %></h1>
    </div>
    <div class="col text-end">
      <a href="/todo/add" class="btn btn-primary">+ New To Do List</a>
    </div>
  </div>

  <div class="row d-flex justify-content-center">
    <div class="item-list">
      <% if(todos.length > 0){ for (let i = 0; i < todos.length; i++) { %>
      <div class="card border-primary my-4" style="min-height: 50px">
        <a
          href="/todo/list/<%= todos[i]._id %>"
          class="card-body text-decoration-none"
        >
          <h5 class="card-title"><%= todos[i].title%></h5>
        </a>
      </div>
      <% }} else { %>

      <div class="row">
        <div class="col-3">
          <img src="/img/coding-monochromatic-e1c05.svg" alt="" />
        </div>
        <div class="col mt-md-4">
          <h2>Okay...</h2>
          <h4>
            Let's add your first to do list!<br /><br />
            <a class="text-decoration-none" href="/todo/add">+ Create</a>
          </h4>
        </div>
      </div>

      <% } %>
    </div>
  </div>

  <% if(todos.length > 0){ %>
  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
      <% let i = (Number(current) > 5 ? Number(current) - 4 : 1) %> <% if (i !==
      1) { %>
      <li class="page-item"><a href="" class="page-link">...</a></li>
      <%} %> <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %> <%
      if(i === current) { %>
      <li class="page-item"><a href="" class="page-link"><%= i %></a></li>
      <%} else {%>
      <li class="page-item">
        <a href="/dashboard/?page=<%= i %>" class="page-link"><%= i %></a>
      </li>
      <%} if(i === Number(current) + 4 && i < pages) { %>
      <li class="page-item"><a href="" class="page-link">...</a></li>
      <% }} %>
    </ul>
  </nav>

  <% } %>
</div>
