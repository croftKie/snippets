<div class="container-fluid pb-5 mb-5 px-5">
  <div class="row mb-4">
    <div class="col">
      <nav aria="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/todo">To Do</a></li>
          <li class="breadcrumb-item">Add New List</li>
        </ol>
      </nav>
      <div class="d-flex justify-content-between align-items-center">
        <h1 class="h3">Create a New To Do List</h1>
      </div>
    </div>
  </div>
  <form action="/todo/add" method="POST" class="position-relative">
    <div class="form-group mb-4" style="left: 1px; top: 1px; right: 1px">
      <input
        type="text"
        class="form-control fw-bold border-0 fs-4"
        id="title"
        name="title"
        placeholder="title"
        required
      />
    </div>
    <% for(let i = 0; i < list_length; i++){ %>
    <div class="form-group my-2 d-flex">
      <input
        class="form-control fw-bold border-0 list-item"
        type="text"
        name=""
        id=""
        placeholder="to do list item"
      />
      <input class="mx-3 check" type="checkbox" name="" id="" />
    </div>
    <%}%>
    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-lg">
        + Add New Item
      </button>
      <button type="submit" class="btn btn-primary btn-lg">
        + Save and Close
      </button>
    </div>
  </form>
</div>
<script>
  document.querySelector(".list-items").append(createItem());

  const addNewItem = () => {
    document.querySelector("form").append(createItem());
  };

  function createItem() {
    const item = `
        <input
          class="form-control fw-bold border-0 list-item"
          type="text"
          name=""
          id=""
          placeholder="to do list item"
        />
        <input class="mx-3 check" type="checkbox" name="" id="" />`;

    const itemContainer = document.createElement("div");
    itemContainer.classList.add("item-container");
    itemContainer.classList.add("d-flex");
    itemContainer.classList.add("my-2");
    itemContainer.classList.add("form-group");
    itemContainer.innerHTML = item;
    return itemContainer;
  }
</script>
