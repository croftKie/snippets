<div class="container-login">
  <div class="container-inner">
    <div class="header">
      <h6 class="title">Welcome to Snippets 98.</h6>
      <div>
        <button class="info"><img src="/img/info.png" alt="" /></button>
        <button class="close"><img src="/img/close.png" alt="" /></button>
      </div>
    </div>
    <div class="content">
      <div class="image-section">
        <img src="/img/coding.png" alt="" />
      </div>
      <div class="form-container">
        <p>Type a user name and password to sign up to Snippets 98.</p>
        <form class="form" action="/auth/signup" method="POST">
          <input
            class="email"
            type="email"
            name="email"
            id="email"
            placeholder="email"
          />
          <input
            class="pass"
            type="password"
            name="password"
            id="password"
            placeholder="password"
          />
          <input
            class="pass"
            type="password"
            name="confirm"
            id="confirm"
            placeholder="confirm password"
          />
          <button class="btn btn-primary w-25" type="submit">Sign Up</button>
        </form>
      </div>
    </div>
  </div>
</div>
